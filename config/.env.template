########################################
# CONNECTIONS
########################################
# UDP link (e.g., for Crazyradio or swarm control)
UDP=<udp://192.168.43.51:2390>

# Radio channels for multiple drones
RADIO_CHANNEL_7=<radio://0/80/2M/E7E7E7E7E7>
RADIO_CHANNEL_8=<radio://0/80/2M/E7E7E7E7E8>
RADIO_CHANNEL_9=<radio://0/80/2M/E7E7E7E7E9>

########################################
# ARUCO MARKER SETTINGS
########################################
ARUCO_DICTIONARY=<string> # Dictionary used for detection (e.g., DICT_4X4_1000, DICT_5X5_100)
ALLOWED_IDS=<int,int,int> # Restrict detection to specific IDs (comma-separated). Leave empty for all.
MARKER_LENGTH_M=<float>   # Physical size of the marker in meters (required if using CALIB_PATH)

########################################
# CAMERA / DISPLAY
########################################
# Camera source:
# - Integer index for local webcam (e.g., 0 or 1)
# - OR a URL for IP streams (e.g., http://192.168.1.67:4747/video)
CAMERA_CONNECTION=<int|url>

# Optional: used for local webcams; IP streams typically ignore these
CAMERA_WIDTH=<int>
CAMERA_HEIGHT=<int>
CAMERA_FPS=<int>

# Minimum mean brightness for warmup acceptance (non-black frame check)
BRIGHTNESS_VALUE=<float>

# Window title for OpenCV display
WINDOW_TITLE=<string>

########################################
# LOW-LATENCY STREAMING
########################################
STREAM_BACKEND=<auto|ffmpeg|gstreamer>  # Backend selection for URL streams: auto|ffmpeg|gstreamer
STREAM_LOW_LATENCY=<0|1>                # Keep capture queue tiny where supported (1=true, 0=false)
STREAM_FLUSH_GRABS=<int>                # Flush N stale frames with cap.grab() before decoding the latest (0=disabled)
MAX_PROC_FPS=<float>                    # Cap processing rate to avoid backlog; 0 = unlimited (e.g., 15 or 20)

########################################
# GRID / OVERLAYS
########################################
# Enable or disable overlays (0/1)
DRAW_GRID=<0|1>
GRID_STEP_PX=<int>
GRID_COLOR=<b,g,r>
GRID_THICKNESS=<int>

DRAW_AXES=<0|1>
DRAW_RULE_OF_THIRDS=<0|1>
DRAW_CROSSHAIR=<0|1>
CAPTURE_CELLS=<0|1>

########################################
# CALIBRATION / POSE
########################################
# Path to camera calibration file (.npz). Leave blank if not using pose estimation.
CALIB_PATH=<path/to/cam_param.npz>

########################################
# STATE / PERFORMANCE
########################################
FPS_COUNTER=<0|1>   # Performance counters (0=off)
FPS_DISPLAY=<float> # If you show FPS in-window and want a moving average period (optional)

########################################
# CLICK-TO-DELTA (overlay only)
########################################
CLICK_DELTA_ENABLED=<0|1> # Master on/off for click-delta overlay
CLICK_DELTA_METRIC=<0|1>  # Display metric (meters) deltas when pose is available

########################################
# WAYPOINT LOGGING
########################################
WAYPOINT_LOGGING=<0|1>           # Master toggle (1=enabled, 0=disabled)
WAYPOINT_Z=<float>               # Default Z (m) for world coordinates when pose is available
WAYPOINT_HUD=<0|1>               # Show markers + count overlay on PyGame window (1=on, 0=off)
WAYPOINT_LOG_FILE=<string|empty> # Optional custom log path; leave blank for auto logs/waypoints-YYYYmmdd.jsonl

########################################
# IBVS CLICK-TO-GO (Commander path)
########################################
# Use Commander hover (body-frame velocities) instead of MotionCommander
IBVS_USE_COMMANDER=<0|1>

# IBVS / Commander vertical integration
# Set to -1 if drone descends when it should climb
IBVS_Z_SIGN=<+1|-1>

# Clamp hover altitude to safe band (meters)
IBVS_Z_MIN=<float>
IBVS_Z_MAX=<float>

# Click-to-go tuning (used by your IBVS loop)
CLICK2GO_TOL_PX=<int>          # stop when both |cx-rx|, |cy-ry| < tol
CLICK2GO_RATE_HZ=<int>         # control loop rate (e.g., 20â€“50)
CLICK2GO_MAX_SPEED=<float>     # m/s clamp for vx, vy
CLICK2GO_TAG_LOSS_FRAMES=<int> # pause/stop if tag missing for N frames

########################################
# LOGGING
########################################
# Log verbosity
LOG_LEVEL=<DEBUG|INFO|WARNING|ERROR>

# Optional logging throttles (frames/IDs sampling & rate limiting)
LOG_FRAME_SAMPLE_EVERY=<int>
LOG_IDS_EVERY=<int>
LOG_WARN_RATELIMIT=<int>
