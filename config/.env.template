########################################
# CONNECTIONS
########################################
# UDP link (e.g., for Crazyradio or swarm control)
UDP=<udp://192.168.43.51:2390>

# Radio channels for multiple drones
RADIO_CHANNEL_7=<radio://0/80/2M/E7E7E7E7E7>
RADIO_CHANNEL_8=<radio://0/80/2M/E7E7E7E7E8>
RADIO_CHANNEL_9=<radio://0/80/2M/E7E7E7E7E9>

########################################
# ARUCO MARKER SETTINGS
########################################
# Dictionary used for detection (e.g., DICT_4X4_1000, DICT_5X5_100)
ARUCO_DICTIONARY=<string>

# Restrict detection to specific IDs (comma-separated). Leave empty for all IDs.
ALLOWED_IDS=<int,int,int>

# Physical size of the marker in meters (required if using CALIB_PATH)
MARKER_LENGTH_M=<float>

########################################
# CAMERA / DISPLAY
########################################
# Camera connection index (0 = default webcam, 1 = secondary, etc.)
CAMERA_CONNECTION=<int>
CAMERA_WIDTH=<int>
CAMERA_HEIGHT=<int>
CAMERA_FPS=<int>
BRIGHTNESS_VALUE=<int>

# Window title for OpenCV display
WINDOW_TITLE=<string>

########################################
# GRID / OVERLAYS
########################################
# Enable or disable overlays (true/false)
DRAW_GRID=<bool>
GRID_STEP_PX=<int>
GRID_COLOR=<b,g,r>
GRID_THICKNESS=<float>

DRAW_AXES=<bool>
DRAW_RULE_OF_THIRDS=<bool>
DRAW_CROSSHAIR=<bool>
CAPTURE_CELLS=<bool>

########################################
# CALIBRATION / POSE
########################################
# Path to camera calibration file (.npz). Leave blank if not using pose estimation.
CALIB_PATH=<path/to/cam_param.npz>

########################################
# STATE / PERFORMANCE
########################################
# Performance counters (0=off)
FPS_COUNTER=<int>
FPS_DISPLAY=<float>

########################################
# CLICK-TO-DELTA
########################################
# Enable or disable the click-delta overlay
CLICK_DELTA_ENABLED=<0|1>
# Display metric (m) deltas when pose is available
CLICK_DELTA_METRIC=<0|1>

########################################
# WAYPOINT LOGGING
########################################
# Master toggle (1=enabled, 0=disabled)
WAYPOINT_LOGGING=<0|1>

# Default Z (m) for world coordinates when pose is available
WAYPOINT_Z=<float>

# Show markers + count overlay on PyGame window (1=on, 0=off)
WAYPOINT_HUD=<0|1>

# Optional custom log path; leave blank for auto logs/waypoints-YYYYmmdd.jsonl
WAYPOINT_LOG_FILE=<string|empty>

########################################
# LOGGING
########################################
# Log verbosity: DEBUG, INFO, WARNING, or ERROR
LOG_LEVEL=<DEBUG|INFO|WARNING|ERROR>
